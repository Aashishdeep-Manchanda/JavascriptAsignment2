block content
     h1 Update the Product
        form(method='POST' action='/update')
            fieldset
                label(for='productName') Product Name
                input#productName(type='text' name='productName' value=Aferlogin.productName)
            fieldset
                label(for='productPrice') Price
                input#productPrice(type='text' name='productPrice' value=Afterlogin.productPrice)
            fieldset
                label(for='productImage') Product Image
                input#productImage(type='file' name='productImage' value=Afterlogin.productImage)
            button(type='submit' value='Submit') Submit

     include partials/footer